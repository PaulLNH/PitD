    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "crypto": "^1.0.1",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "jwt-decode": "^2.2.0",
    "jwt-express": "^1.1.0",
    "lodash": "^4.17.10",
    "mysql2": "^1.6.1",
    "path": "^0.12.7",
    "request": "^2.87.0",
    "sequelize": "^4.38.0",
    "socket.io": "^2.1.1"
  }
